<% include ../partials/header %>
 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Welcome To Cnect<h1>
             <p>Connect with schools all over the world!</p>
             <p>
                <a class="btn btn-primary btn-large" href="/calls/new">Add New Call</a>
             </p>
         </div>
        <!--<div style="height: 30px; margin-top: 10px;" class="col-md-12 active">-->
